{
  "version": 2,
  "outputDirectory": ".",
  "buildCommand": "echo 'Static site - no build needed'",
  "devCommand": "python -m http.server 8000",
  "installCommand": "echo 'No dependencies to install'",
  "framework": null,
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    }
  ]
}
